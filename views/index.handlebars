<img src="" alt="">
<h1>Eat Da Burger</h1>

<ul>
  {{#each burger}} 
    {{#unless this.devoured}}
      <li>
        {{this.burger.name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">Devour!</button>
        </form>
        {{> cats/delete-cat}}
      </li>
    {{/unless}} 
  {{/each}}
</ul>

<ul>
  {{#each cats}}  
    {{#if this.sleepy}}
      <li>
        <p><span class="label">ID:</span>{{this.id}}</p>
        <p><span class="label">Quote:</span>{{this.burger.name}}</p>
      </li>
    {{/if}} 
  {{/each}}
</ul>