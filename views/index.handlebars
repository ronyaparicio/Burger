<div class="container-fluid">
  <div class="row">
    <div>
      <img src="" alt="">
      <h1>Eat Da Burger</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <ul>
        {{#each burger}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devoured</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <ul>
        {{#each burger}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

